{
  "name": "cql-tests-ui",
  "version": "1.4.0",
  "author": "Preston Lee",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/preston/cql-tests-ui"
  },
  "homepage": "https://github.com/preston/cql-tests-ui",
  "bugs": {
    "url": "https://github.com/preston/cql-tests-ui/issues"
  },
  "scripts": {
    "ng": "ng",
    "start": "envsubst < public/configuration.template.js > public/configuration.js && ng serve",
    "build": "ng build",
    "watch": "envsubst < public/configuration.template.js > public/configuration.js && ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@types/fhir": "^0.0.41",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.55.1",
    "@types/jasmine": "~5.1.9",
    "jasmine-core": "~5.10.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
