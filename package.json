    "@lezer/highlight": "^1.2.3",
    "@types/fhir": "^0.0.41",
    "@types/prismjs": "^1.26.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bootstrap": "^5.3.8",
